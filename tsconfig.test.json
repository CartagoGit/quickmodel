{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		// Tests no necesitan generar archivos
		"noEmit": true,

		// Validaci√≥n estricta de variables sin usar en tests
		"noUnusedLocals": true,
		"noUnusedParameters": true,

		"rootDir": "./",
		"baseUrl": "./",
		"paths": {
			"@/*": ["./src/*"],
			"@tests/*": ["./tests/*"]
		}
	},
	"include": ["tests/**/*", "src/**/*"],
	"exclude": ["node_modules", "dist", "docs/**/*", "docs-vitepress/**/*"]
}
