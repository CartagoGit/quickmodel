{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		// Tests no necesitan generar archivos
		"noEmit": true,
		
		// Validaci√≥n estricta de variables sin usar en tests
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		
		// Asegurar que los path aliases funcionen en tests
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": [
		"tests/**/*",
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
