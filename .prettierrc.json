{
	"printWidth": 80,
	"arrowParens": "always",
	"bracketSpacing": true,
	"bracketSameLine": true,
	"embeddedLanguageFormatting": "auto",
	"htmlWhitespaceSensitivity": "ignore",
	"insertPragma": false,
	"jsxSingleQuote": false,
	"proseWrap": "preserve",
	"quoteProps": "as-needed",
	"requirePragma": false,
	"semi": true,
	"singleQuote": true,
	"tabWidth": 4,
	"trailingComma": "es5",
	"useTabs": true,
	"singleAttributePerLine": true,
	"overrides": [
		{
			"files": ["*.component.html", "*.html"],
			"options": {
				"parser": "angular"
			}
		}
	]
}
