{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"lib": ["ES2020", "DOM"],
		"strict": true,
		"skipLibCheck": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"types": ["vitepress/client"]
	},
	"include": [
		".vitepress/**/*.ts",
		".vitepress/**/*.vue",
		".vitepress/**/*.d.ts"
	]
}
