{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		// Tests no necesitan generar archivos
		"noEmit": true,

		// Validaci√≥n estricta de variables sin usar en tests
		"noUnusedLocals": true,
		"noUnusedParameters": true,

		"rootDir": "../"
	},
	"include": ["./**/*", "../src/**/*"],
	"exclude": [
		"../node_modules",
		"../dist",
		"../docs/**/*",
		"../docs-vitepress/**/*"
	]
}
